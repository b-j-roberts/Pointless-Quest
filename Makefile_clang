main: main.o
	clang++ -v main.o Functions.o World.o Player.o Map.o Biomes/Biome_Builder.o Resources/Resources.o Resources/Structures.o -o main -lsfml-graphics -lsfml-window -lsfml-system -O3 -std=c++17 -Wall -Wextra

main.o: main.cpp Functions.o Resources/Resources.o Resources/Structures.o Biomes/Biome_Builder.o World.o Player.o Map.o
	clang++ -c main.cpp -ggdb -o main.o -O3 -std=c++17 -Wall -Wextra

Functions.o:
	clang++ -c Functions.cpp -ggdb -o Functions.o -O3 -std=c++17 -Wall -Wextra

Resources/Resources.o:
	clang++ -c Resources/Resources.cpp -ggdb -o Resources/Resources.o -O3 -std=c++17 -Wall -Wextra

Resources/Structures.o: Resources/Resources.o
	clang++ -c Resources/Structures.cpp -ggdb -o Resources/Structures.o -O3 -std=c++17 -Wall -Wextra

Biomes/Biome_Builder.o: Resources/Structures.o
	clang++ -c Biomes/Biome_Builder.cpp -ggdb -o Biomes/Biome_Builder.o -O3 -std=c++17 -Wall -Wextra

Player.o: World.o Resources/Resources.o
	clang++ -c Player.cpp -ggdb -o Player.o -O3 -std=c++17 -Wall -Wextra

World.o: Biomes/Biome_Builder.o
	clang++ -c World.cpp -ggdb -o World.o -O3 -std=c++17 -Wall -Wextra

Map.o: World.o
	clang++ -c Map.cpp -ggdb -o Map.o -O3 -std=c++17 -Wall -Wextra

clean:
	rm Functions.o Player.o World.o Map.o Resources/Resources.o Resources/Structures.o Biomes/Biome_Builder.o main.o main
